/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Nand(a=a,b=ousel,out=e1);
    Nand(a=sel,b=sel,out=ousel);
    Nand(a=b,b=sel,out=e2);
    Nand(a=e1,b=e2,out=out);
}